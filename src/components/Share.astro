---
import { siteConfig } from '@/data/site.config'
import WhatsappIcon from './icons/WhatsappIcon.astro'
import LinkedinIcon from './icons/LinkedinIcon.astro'
const message = siteConfig.shareMessage

const URL = Astro.url.href
---

<div
	class='bg-stone-50 dark:bg-stone-900/50 rounded-lg p-3 border border-stone-200 dark:border-stone-700'
>
	<div class='flex items-center justify-between'>
		<span class='text-sm font-medium text-stone-700 dark:text-stone-300'>Share</span>
		<div class='flex gap-2'>
			<a
				href='https://www.linkedin.com/shareArticle?mini=true&url=${URL}'
				target='_blank'
				class='p-2 bg-stone-100 dark:bg-stone-800 rounded-md hover:bg-accent hover:text-white transition-all duration-200'
			>
				<LinkedinIcon class='w-4 h-4' />
			</a>
			<a
				href='https://wa.me/?text=${encodeURIComponent(message + '
				'
				+
				URL)}'
				target='_blank'
				class='p-2 bg-stone-100 dark:bg-stone-800 rounded-md hover:bg-accent hover:text-white transition-all duration-200'
			>
				<WhatsappIcon class='w-4 h-4' />
			</a>
		</div>
	</div>
</div>
