---
export interface Props {
	tag: string
}
const { tag } = Astro.props
---

<a href={`/tags/${encodeURIComponent(tag.toLowerCase())}`} aria-label={tag}>
	<span
		class='inline-flex items-center px-3 py-1.5 text-sm font-medium bg-accent/10 text-accent dark:bg-accent/20 dark:text-accent rounded-lg hover:bg-accent/20 dark:hover:bg-accent/30 transition-colors duration-200 border border-accent/20 dark:border-accent/30'
	>
		{tag ?? 'Blog Tag'}
	</span>
</a>
